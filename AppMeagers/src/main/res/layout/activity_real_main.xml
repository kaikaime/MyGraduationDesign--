<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:background="@color/colorPrimary"
        android:id="@+id/real_tb"
        android:layout_height="50dp">
        <RelativeLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_centerVertical="true"
                android:id="@+id/real_tv_cancel"
                android:textColor="@android:color/white"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                android:text="微博"/>
            <TextView
                android:id="@+id/real_tv_send"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:textSize="15dp"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <EditText
        android:layout_below="@id/real_tb"
        android:paddingTop="10dp"
        android:id="@+id/real_et_content"
        android:paddingLeft="10dp"
        android:hint="微博内容"
        android:gravity="top"
        android:paddingRight="10dp"
        android:maxLength="140"
        android:maxLines="10"
        android:layout_width="match_parent"
        android:background="@drawable/edit_shape"
        android:layout_height="200dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/real_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableLeft="@mipmap/write_icon_lbs_normal"
                android:id="@+id/real_tv_loction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击添加地理位置"
                android:padding="10dp"
                android:background="@drawable/real_loction_shape"/>
            <TextView
                android:id="@+id/tv_tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="140"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/btn_false"
            android:id="@+id/sqit_line"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="50dp">
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/wb_icon_write_pic_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/real_pic"/>

            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/wb_icon_write_at_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/real_a"/>
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/wb_icon_write_expression_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/real_face"/>
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/wb_icon_write_topic_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/real_s"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>