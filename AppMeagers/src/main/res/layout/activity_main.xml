<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:background="@color/btn_false"
        android:id="@+id/main_ll_add_btn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/main_ll_btn"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/main_tv_index"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:text="首页"
                android:gravity="center"
                android:textColor="@color/home_color"
                android:drawableTop="@drawable/wb_icon_tabbar_main_seletor"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/main_tv_infor"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:text="相册"
                android:gravity="center"
                android:textColor="@color/home_color"
                android:drawableTop="@drawable/wb_icon_tabbar_at_seletor"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/main_tv_me"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:text="我"
                android:gravity="center"
                android:textColor="@color/home_color"
                android:drawableTop="@drawable/wb_icon_tabbar_my_seletor"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_above="@id/main_ll_add_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_fl_add_frag"/>
</RelativeLayout>
