<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/me_bg"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PersonalActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_iv_goback"
            android:id="@+id/goback_iv"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情资料"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:id="@+id/save"
            android:layout_gravity="right|center_vertical" />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:fadeScrollbars="true">
            <RelativeLayout
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <com.thinkcool.circletextimageview.CircleTextImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/user_photo"
                    android:layout_centerInParent="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    app:citv_border_width="2dp"
                    app:citv_border_color="@color/me_bg"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="昵称:"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="0" />
                <EditText
                    android:id="@+id/user_bie_et"
                    android:gravity="center"
                    android:background="@drawable/edit_shape"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:src="@mipmap/v5_btn_profile_detail_nor"
                    android:id="@+id/edit_bie_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/edit_bie_tv"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="7个字"
                    android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="账号:"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="0" />
                <TextView
                    android:id="@+id/user_account_tv"
                    android:gravity="center"
                    android:background="@drawable/edit_shape"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="简介:"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="0" />
                <EditText
                    android:id="@+id/user_bie_biref_et"
                    android:gravity="center"
                    android:maxLines="10"
                    android:maxLength="13"
                    android:background="@drawable/edit_shape"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:src="@mipmap/v5_btn_profile_detail_nor"
                    android:id="@+id/edit_brefi_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/edit_brefi_tv"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="140个字"
                    android:textSize="12dp"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="基本资料"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="生日:"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="0" />
                <TextView
                    android:id="@+id/user_bir_et"
                    android:gravity="center"
                    android:background="@drawable/edit_shape"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/setting_item_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="性别:"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="0" />
                <TextView
                    android:id="@+id/user_sex_tv"
                    android:gravity="center"
                    android:background="@drawable/edit_shape"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/setting_item_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="家乡:"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="0" />
                <TextView
                    android:id="@+id/user_home_tv"
                    android:gravity="center"
                    android:background="@drawable/edit_shape"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/setting_item_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="所在地:"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="0" />
                <TextView
                    android:id="@+id/user_location_tv"
                    android:gravity="center"
                    android:background="@drawable/edit_shape"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/setting_item_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="个性标签"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="0" />
                <TextView
                    android:id="@+id/user_self_tv"
                    android:gravity="center"
                    android:background="@drawable/edit_shape"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/setting_item_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="教育信息"/>
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/read_school"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2014年进入:"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="0" />
                <TextView
                    android:id="@+id/user_school_tv"
                    android:gravity="center"
                    android:background="@drawable/edit_shape"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/setting_item_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="工作信息"/>
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="添加工作信息:"
                    android:id="@+id/work_infor"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="0" />
                <TextView
                    android:id="@+id/user_addinfro_tv"
                    android:gravity="center"
                    android:background="@drawable/edit_shape"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/setting_item_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="感兴趣的行业"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="0" />
                <TextView
                    android:id="@+id/user_industry_tv"
                    android:gravity="center"
                    android:background="@drawable/edit_shape"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/setting_item_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="注册时间"/>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/user_register_tv"
                    android:gravity="center"
                    android:background="@drawable/edit_shape"
                    android:textSize="15dp"
                    android:text="2015-14-22"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/setting_item_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
