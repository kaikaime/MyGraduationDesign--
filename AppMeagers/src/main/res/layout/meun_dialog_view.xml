<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
             android:id="@+id/fl_show"
             android:visibility="gone"
             android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:contextClickable="false">
        <Button
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:id="@+id/btn_shadow"
            android:focusable="true"
            android:contextClickable="false"
            android:background="#9f797979"/>
    </FrameLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:id="@+id/ll_show"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_weixin"
                android:drawableTop="@drawable/weixin_selector"
                android:text="微信好友"
                style="@style/ShowMeunItem"/>
            <TextView
                android:drawableTop="@drawable/share_weixin_selector"
                android:text="朋友圈"
                android:id="@+id/tv_frd"
                style="@style/ShowMeunItem"/>
            <TextView
                android:drawableTop="@drawable/share_qq_selector"
                android:text="QQ好友"
                android:id="@+id/tv_qq"
                style="@style/ShowMeunItem"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:drawableTop="@drawable/share_collect_selector"
                android:text="收藏"
                android:id="@+id/tv_collect"
                style="@style/ShowMeunItem"/>
            <TextView
                android:drawableTop="@drawable/share_screen_selector"
                android:text="举报"
                android:id="@+id/tv_screen"
                style="@style/ShowMeunItem"/>
            <TextView
                android:drawableTop="@drawable/share_link_selector"
                android:text="复制链接"
                android:id="@+id/tv_copy"
                style="@style/ShowMeunItem"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>