<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/tp_bg_tutorial"/>
        <ImageView
            android:id="@+id/logo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />
    <LinearLayout
        android:layout_marginTop="50dp"
        android:paddingLeft="50dp"
        android:id="@+id/logo_qq"
        android:layout_below="@id/logo_title"
        android:paddingRight="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/qq_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/login_icon_qq"
            android:drawablePadding="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="QQ登录"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weixing_logo"
            android:drawableTop="@mipmap/login_icon_weixin"
            android:drawablePadding="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="微信登录"/>
        <TextView
            android:id="@+id/phone_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/login_icon_phone"
            android:drawablePadding="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="手机号登录"/>
    </LinearLayout>
    <LinearLayout
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/logo_line"
        android:orientation="vertical"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_username"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:textColor="#32C7FF"
                android:textColorHint="#32C7FF"
                android:background="@drawable/edit_name_shape"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="微博账号/QQ号码/邮箱"/>
            <EditText
                android:id="@+id/edit_userpass"
                android:textColor="#32C7FF"
                android:textColorHint="#32C7FF"
                android:paddingLeft="10dp"
                android:layout_marginTop="1dp"
                android:textSize="15dp"
                android:background="@drawable/edit_pass_shape"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:password="true"
                android:singleLine="true"
                android:hint="请输入密码"/>
        </LinearLayout>
        <Button
            android:background="@drawable/submit_button_selector"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:onClick="loginClink"
            android:text="登录"
            android:textColor="@android:color/white"/>
        <FrameLayout
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_true"
                android:text="注册账号"/>
            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:textColor="@color/btn_true"
                android:layout_height="wrap_content"
                android:text="忘记密码"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>