<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/refren_all"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/refren_head"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <FrameLayout
            android:paddingBottom="15dp"
            android:paddingTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headview_fl">
            <ProgressBar
                android:layout_width="20dp"
                android:id="@+id/main_progre"
                android:visibility="gone"
                android:indeterminateDrawable="@anim/imofan_round_progress_bar_1"
                android:layout_gravity="center_vertical|left"
                android:layout_height="20dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/refren_pull"
                android:src="@mipmap/wb_refresh_arrow"
                android:layout_gravity="center_vertical|left"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center_vertical|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/refren_text"
                    android:layout_width="wrap_content"
                    android:text="下拉松手刷新!"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/pudate_title_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10dp" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
